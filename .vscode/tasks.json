{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "${workspaceRoot}\\build.cmd",
                "debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "make clean",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "${workspaceRoot}\\clean.cmd",
                "debug"
            ]
        },
        {
            "label": "run again",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "${workspaceRoot}\\just-run.cmd",
                "debug"
            ]
        }
    ]
}